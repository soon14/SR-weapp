/*收支明细*/

page {
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
}











/*选项卡内容*/

.navbarContent {
    position: absolute;
    left: 0;
    right: 0;
    top: 110rpx;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}











/*选项卡*/

.topnavbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    width: 750rpx;
    max-width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    background: #3583db;
    color: #ffffff;
    font-size: 30rpx;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: space-around;
}

.topnavbar_2 {
    position: relative;
}

.topnavbar .item {
    position: relative;
    padding: 0 10rpx;
}

.topnavbar .item.active {
    color: #ffffff;
}

.topnavbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 10rpx;
    left: 0;
    right: 0;
    width: 100%;
    height: 4rpx;
    border-radius: 2rpx;
    background: #ffffff;
}







/*内容模版*/

.contenttime {
    width: 690rpx;
    display: flex;
    padding: 0 30rpx;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #f7f7f7;
}

.contenttime wx-view:nth-of-type(1) {
    font-size: 28rpx;
    color: #666666;
}

.contenttime wx-view:nth-of-type(2) {
    font-size: 28rpx;
    color: #999999;
}

.content {
    flex: 1;
    width: 690rpx;
    height: 120rpx;
    margin: 0  30rpx;
    padding: 30rpx 0;
    overflow: hidden;
    background-color: #fff;
    display: flex;
    justify-content: flex-start;
    border-bottom:1px solid #ebebeb;

}

.content wx-image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.contenimg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.contentcenter {
    flex: 1;
    height: 114rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    text-align: left;
    margin-left: 30rpx;
}

.contentcenter wx-view:nth-of-type(1) {
    font-size: 32rpx;
    line-height: 32rpx;
    color: #333333;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.contentcenter wx-view:nth-of-type(2) {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #bdbdbd;
}

.contentcenter wx-view:nth-of-type(3) {
    font-size: 22rpx;
    line-height: 22rpx;
    color: #bdbdbd;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.contentcenter wx-view:nth-of-type(3) wx-text:nth-of-type(1) {
    padding-right: 20rpx;
    border-right: 1px solid #ebebeb;
}

.contentcenter wx-view:nth-of-type(3) wx-text:nth-of-type(2) {
    margin-left: 20rpx;
}

.contentcenter wx-view:nth-of-type(3) wx-text:nth-of-type(3) {
  flex: 1;
    margin-left: 20rpx;
    text-align: right;
}