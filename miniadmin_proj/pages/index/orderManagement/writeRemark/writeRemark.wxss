/*添加文字*/

page {
    background-color: #f7f7f7;
}

.addtextbox {
    width: 750rpx;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

wx-textarea {
    width: 690rpx;
    min-height: 200rpx;
    padding: 34rpx 30rpx;
    background-color: #fff;
}

wx-button {
    background-color: #4f9dd0;
    width: 100%;
    height: 100rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #f9f9f9;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}