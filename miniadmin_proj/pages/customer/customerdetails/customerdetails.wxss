    border-radius: 50%;
}

.detail_dt_box .detail_dt .xiant {
    height: 95rpx;
    width: 6rpx;
    background-color: #39a2dc;
}

.detail_dt_box:nth-last-of-type(1) .detail_dt .xiant {
    height: 0;
    width: 0;
}

.detail_dt_box .detail_dt_text .text1 {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #666666;
    padding: 0 20rpx;
}

.detail_dt_box .detail_dt_text .text2 {
    font-size: 24rpx;
    line-height: 55rpx;
    color: #999999;
    padding: 0 20rpx;
}







