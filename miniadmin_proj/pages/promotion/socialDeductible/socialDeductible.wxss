/*推广(社交立减金)*/

page,
.contnet {
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.redbox {
    margin-top: 30rpx;
    background-color: #ef4f53;
    border-radius: 30rpx;
    width: 630rpx;
    height: 640rpx;
    box-shadow: 0 4rpx 32rpx 0 rgba(101, 19, 15, 0.51);
    overflow: hidden;
    position: relative;
}

.redbox .redboximg {
    width: 630rpx;
    height: 640rpx;
}

.redbox .redboxtext,
.redboxnum {
    position: absolute;
    top: 233rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    font-size: 32rpx;
    line-height: 32rpx;
    color: #ffffff;
    text-align: center;
}

.redbox .redboxnum {
    top: 286rpx;
    font-size: 52rpx;
    line-height: 52rpx;
    color: #ffdb6d;
}

.redbox .renbtn {
    background-color: #ffdb6d;
    font-size: 30rpx;
    color: #6b1900;
    width: 560rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 45rpx;
    border: 1px solid #ffdb6d;
    box-shadow: 0 4rpx 24rpx 0 rgba(101, 19, 15, 0.51);
    position: absolute;
    bottom: 63rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}




/**/

.expaln {
    font-size: 30rpx;
    margin-top: 118rpx;
    color: #666666;
    text-align: center;
}




/**/

.quanbox {
    margin-top: 30rpx;
    height: 190rpx;
    overflow: hidden;
}

.quan {
    position: relative;
    width: 630rpx;
    height: 190rpx;
    margin: 0 auto;
    background-color: #fff;
    padding: 0 30rpx;
    border-radius: 16rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.topline {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    border-top: 6rpx solid #e94747;
}

.yuan {
    width: 50rpx;
    height: 50rpx;
    background-color: #f7f7f7;
    border-radius: 50%;
    position: absolute;
    top: 95rpx;
}

.yuan_left {
    left: -25rpx;
}

.yuan_right {
    right: -25rpx;
}

.quancontent {
    width: 630rpx;
    height: 130rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding-top: 20rpx;
    padding-bottom: 15rpx;
}

.quancontent_top {
    color: #e94747;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quancontent_top wx-view:nth-of-type(1) {
    font-size: 36rpx;
    line-height: 36rpx;
}

.quan_money {
    display: flex;
    justify-content: center;
    align-items: baseline;
}

.quan_money wx-text:nth-of-type(1) {
    font-size: 28rpx;
    line-height: 28rpx;
}

.quan_money wx-text:nth-of-type(2) {
    font-size: 52rpx;
    line-height: 52rpx;
}

.quancontent_bottom {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999999;
}


.quantime {
    height: 60rpx;
    width: 630rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 60rpx;
    text-align: left;
    border-top: 1px dashed #dadada;
}




/**/

.changebtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #4f9dd0;
    color: #f9f9f9;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    border: none;
    margin: 0;
    padding: 0;
    border-radius: 0;
    z-index: 100;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.changebtn wx-view,
.changebtn wx-navigator {
    flex: 1;
}

.changebtn wx-view {
    background-color: #fd6538;
}

.active {
    background-color: #3c5769!important;
}