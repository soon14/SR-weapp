.wktbox {
    width: 88rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background-color: #f92121;
    border-radius: 20rpx;
    position: absolute;
    right: -33rpx;
    bottom: 2rpx;
    padding:0 12rpx;
}

.activebox {
    width: 750rpx;
    height: 100rpx;
    font-size: 30rpx;
    color: #333333;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #ffffff;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.activebox-titlebox {
    width: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: relative;
}

.activebox-active {
    color: #4287d4;
}

.activebox-active-line {
    position: absolute;
    left: 0;
    right: 0;
    bottom: -15rpx;
    width: 100%;
    height: 4rpx;
    background-color: #4287d4;
    border-radius: 2rpx;
}

.contentbox {
    background-color: #fff;
    font-size: 26rpx;
    color: #666666;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}

.content {
    flex: 1;
    padding: 0 30rpx;
    border-bottom: 1px solid #ebebeb;
    height: 180rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.textbox {
    flex: 1;
}

.content .textbox .khcz {
    color: #4b91de;
}

.content .textbox .sjljj {
    color: #41cb8d;
}

.content .textbox .sjhb {
    color: #f36347;
}

.content .textbox .yhq {
    color: #ecb746;
}

.content .textbox .collage {
    color: #f35149;
}

.textbox {
    flex: 1;
    height: 120rpx;
    margin-left: 30rpx;
    line-height: 26rpx;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}

.textbox wx-view:nth-of-type(1) {
    color: #333333;
    font-size: 32rpx;
    line-height: 32rpx;
}

.color_ccc{
    color: #ccc!important;
}