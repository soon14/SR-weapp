/*推广*/

page {
    background-color: #f7f7f7;
    color: #666666;
    font-size: 26rpx;
}

.topbox {
    font-size: 28rpx;
    color: #333333;
    background-color: #fff;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
    padding: 40rpx 0;
}

.topbox>wx-view {
    width: 186rpx;
    text-align: center;
    line-height: 18rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-bottom: 30rpx;
}

.topbox .navco {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    line-height: 120rpx;
    margin-bottom: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.topbox .navco wx-image {
    width: 120rpx!important;
    height: 120rpx!important;
    border-radius: 50%;
    overflow: hidden;
}

.images {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

