/*推广(客户充值)*/

page {
    background-color: #f7f7f7;
    color: #999999;
    font-size: 30rpx;
    line-height: 100rpx;
}

.section {
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ebebeb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    background: #fff;
    margin-top: 20rpx;
}

.sectionbb {
    position: relative;
}

.section .section__title {
    margin-right: 18rpx;
    color: #333;
}

.section wx-input {
    flex: 1;
    padding: 0 30rpx;
    color: #333;
}

.section_nom {
    border-top: 0;
    margin-top: 0;
}

.changebtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #4f9dd0;
    color: #f9f9f9;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    border: none;
    margin: 0;
    padding: 0;
    border-radius: 0;
    z-index: 100;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.changebtn wx-view {
    flex: 1;
}

.changebtn wx-view:nth-of-type(1) {
    background-color: #fd6538;
}

.contentbox {
    color: #4f9dd0;
    font-size: 46rpx;
    line-height: 46rpx;
    width: 750rpx;
    /* height:592rpx; */
    padding-bottom: 100rpx;
}

.contentbox .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
    border: 1px solid #ebebeb;
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.contentbox .content wx-view.colum {
    flex: 1;
    padding: 30rpx 0;
    height: 100rpx;
    display: inline-flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
}

.contentbox .text {
    color: #333333;
    font-size: 32rpx;
    line-height: 32rpx;
}

.closeActivity {
    background-color: #3c5769!important;
}