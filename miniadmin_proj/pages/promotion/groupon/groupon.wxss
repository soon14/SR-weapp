/*proinfobox*/

.proinfobox {
    border-top: 1rpx solid #ebebeb;
    border-bottom: 1rpx solid #ebebeb;
    width: 690rpx;
    padding: 30rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
}

.proinfobox-select {
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #999999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    margin-top: -8rpx;
}

.proinfobox-left {
    display: flex;
    justify-content: center;
    align-items: center;
}

.proinfobox-left wx-image {
    width: 140rpx;
    height: 140rpx;
    background-color: #eeeeee;
}

.proinfobox-right {
    margin-left: 26rpx;
    flex: 1;
    height: 140rpx;
    line-height: 70rpx;
    display: flex;
    justify-content: space-around;
    align-items: flex-start;
    flex-direction: column;
}

.proinfobox-right-title {
    font-size: 28rpx;
    max-width: 404rpx;
    height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #333333;
}

.proinfobox-right-pic {
    height: 70rpx;
    font-size: 26rpx;
    color: #999999;
}

.proinfobox-right-pic wx-text {
    color: #f06f48;
}

