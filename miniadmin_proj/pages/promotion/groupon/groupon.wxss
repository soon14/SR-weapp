/*推广(优惠券)*/

page {
    background-color: #f7f7f7;
    color: #999999;
    font-size: 30rpx;
    line-height: 100rpx;
    padding-bottom: 80rpx;
}

.formbox {
    /* position: fixed; */
    left: 0;
    right: 0;
    top: 0;
    width: 750rpx;
    height: 1214rpx;
    overflow-x: hidden;
    overflow-y: scroll;
}

.section {
    border-top: 1rpx solid #ebebeb;
    border-bottom: 1rpx solid #ebebeb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    background: #fff;
    margin-top: 20rpx;
}

.section_top_text {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 26rpx;
    color: #666666;
    line-height: 26rpx;
    margin: 20rpx 30rpx;
