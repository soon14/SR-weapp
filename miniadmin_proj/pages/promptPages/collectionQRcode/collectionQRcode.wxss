/*collectionQRcode.wxml 信息提示页(收款二维码)*/

page {
    background-color: #f7f7f7;
    color: #333333;
    font-size: 28rpx;
}

.collectionQRcodebox {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    padding-bottom: 90rpx;
    max-width: 750rpx;
    overflow-x: hidden;
}

.collectionQRcode {
    width: 750rpx;
    padding: 30rpx 0;
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.titlebox {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.image {
    background-color: #e9e9e9;
    width: 320rpx;
    height: 320rpx;
    margin: 30rpx auto;
}

.image image {
    width: 320rpx;
    height: 320rpx;
}

.btn {
    background-color: #39a2dc;
    height: 80rpx;
    width: 320rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 30rpx;
    border-radius: 40rpx;
    text-align: center;
    margin: 0 auto;
}

.addQRbtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    line-height: 90rpx;
    height: 90rpx;
    font-size: 30rpx;
    color: #39a2dc;
    background-color: #fafafa;
}

.addQRbtn text {
    font-size: 50rpx;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
}