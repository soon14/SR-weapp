/*customerDataCardtemplate.wxss*/


/*客户资料卡*/

.detailbox {
    position: relative;
}

.detail {
    width: 690rpx;
    margin: 0 auto;
    border-radius: 12rpx;
    background-color: #fff;
    margin: 30rpx;
    overflow: hidden;
    -webkit-box-shadow: 0 4rpx 12rpx 0 #ebebeb;
    -moz-box-shadow: 0 4rpx 12rpx 0 #ebebeb;
    box-shadow: 0 4rpx 12rpx 0 #ebebeb;
}

.topcontent1 {
    padding: 30rpx;
    height: 110rpx;
    text-align: center;
    display: flex;
    align-items: center;
}

.topcontent1 wx-image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.topcontent1 .useinfo1 {
    width: 520rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: left;
    font-size: 32rpx;
    color: #333;
}

.topcontent1 .useinfo1 .title1 {
    display: flex;
    font-size: 32rpx;
}

.topcontent1 .useinfo1 .title1 view {
    max-width: 450rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.topcontent .useinfo1 .title1 wx-image {
    width: 32rpx;
    height: 52rpx;
    margin-left: 15rpx;
}

.topcontent1 .useinfo1 .desc1 {
    font-size: 28rpx;
    color: #bdbdbd;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.topcontent1 .useinfo1 .desc1 text {
    display: block;
    padding-right: 30rpx;
    color: #999999;
    max-width: 260rpx;
}

.topcontent1 .useinfo1 .desc1 text:nth-of-type(1) {
    max-width: 260rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.topcontent1 .useinfo1 .title1 image {
    width: 32rpx;
    height: 52rpx;
    margin-left: 15rpx;
}

.bottomcontent1 {
    height: 118rpx;
    margin: 0 30rpx;
    border-top: 1px solid #ebebeb;
    line-height: 60rpx;
    font-size: 32rpx;
    display: flex;
    justify-content: space-between;
    text-align: left;
    color: #999;
}

.bottomcontent1 .bottomcontent1text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    overflow: hidden;
}

.bottomcontent1 .bottomcontent1text:nth-of-type(1) {
    text-align: left;
}

.bottomcontent1 .bottomcontent1text:nth-of-type(3) {
    text-align: right;
}

.bottomcontent1 .bottomcontent1text text {
    font-size: 32rpx;
    color: #39a2dc;
    line-height: 46rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.bottomcontent1 .bottomcontent1text view {
    font-size: 26rpx;
    color: #999999;
    line-height: 46rpx;
}