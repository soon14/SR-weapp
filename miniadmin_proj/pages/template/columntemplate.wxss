/*columntemplate.wxml*/

.column {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.column .columncontent {
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    padding-bottom: 30rpx;
    padding-top: 10rpx;
}

.column .columnname {
    font-size: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    color: #333;
    padding: 30rpx;
    display: flex;
    align-items: center;
}

.column .columnname .lsbj {
    background-color: #39a2dc;
    width: 6rpx;
    height: 26rpx;
    margin-right: 15rpx;
}

.column .columncontent navigator {
    flex: 1;
}

.column .columncontent .item {
    flex: 1;
    text-align: center;
    height: 96rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.column .columncontent .item .dcldd {
    margin: 0 auto;
    text-align: center;
    position: absolute;
    background-color: #f76262;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    line-height: 40rpx;
    color: #fff;
    font-size: 24rpx;
    top: 0;
    right: 36rpx;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.column .columncontent .item image {
    width: 48rpx;
    height: 48rpx;
}

.column .columncontent .item text {
    display: block;
    font-size: 26rpx;
    line-height: 26rpx;
    height: 26rpx;
    color: #666;
}

.column .columncontent .item text.yhy {
    color: #ff455b;
}