.mdfwbox {
    margin-top: 30rpx;
    max-width: 750rpx;
    overflow-x: hidden;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}

.mdfwbox .mdfwtitle {
    width: 690rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    color: #333333;
    line-height: 46rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f7f7f7;
}

.mdfwtitle wx-navigator {
    color: #4f9dd0;
}

.mdfwbox .mdfw {
    width: 690rpx;
    padding: 0 30rpx;
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ebebeb;
    font-size: 26rpx;
    color: #333333;
    line-height: 122rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.fwcolume {
    overflow: hidden;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}

.fwcolume wx-view {
    margin: 20rpx 0;
    margin-right: 40rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
}

.fwcolume wx-view wx-image {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.fwcolume wx-view wx-text {
    color: #999999;
    font-size: 26rpx;
    line-height: 46rpx;
}

.logo {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 15px;
}