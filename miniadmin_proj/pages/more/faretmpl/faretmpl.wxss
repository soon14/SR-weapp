page {
    background-color: #f7f7f7;
    padding-bottom: 110rpx;
}

.contentbox {
    width: 750rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.content {
    width: 750rpx;
    height: 190rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.title {
    font-size: 36rpx;
    color: #39a2dc;
    height: 110rpx;
    line-height: 110rpx;
    width: 750rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
}

.contentbtn {
    height: 80rpx;
    margin: 0 30rpx;
    padding: 20rpx 0;
    width: 690rpx;
    border-top: 1px solid #ebebeb;
    display: flex;
    justify-content: center;
    align-items: center;
}

.contentbtn wx-view {
    flex: 1;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.contentbtn wx-view:nth-of-type(1) {
    border-right: 1px solid #ebebeb;
}

.contentbtn wx-view wx-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}



