/**app.wxss**/

@import 'style/weui.wxss';

page {
    background-color: #f8f8f8;
    font-family: PingFang-SC-Regular, -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    max-width: 750rpx;
    overflow-x: hidden;
}

.navigator-hover {
    background-color: inherit;
}

.container {
    height: 100%;
    width: 100%;
    max-width: 750rpx;
    overflow-x: hidden;
}

.blanks {
    text-align: center;
    padding-top: 70px;
}

.blanks image {
    width: 163px;
    height: 127px;
}

.blanks text {
    color: #bbb;
    font-size: 17px;
    display: block;
    padding: 10px 0;
}

.time_picker {
    width: 100%;
    height: 600rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    /* padding-top: 68rpx; */
    z-index: 10000000;
}

.time_picker picker-view-column {
    line-height: 100rpx;
    text-align: center;
    line-height: 68rpx;
    background-color: #fff;
}

.time_picker_head {
    position: absolute;
    top: 0;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    background-color: #fff;
    /* border-top: 1px solid rgba(0, 0, 0, .1); */
    border-bottom: 1px solid rgba(0, 0, 0, .1);
    display: flex;
    justify-content: center;
    color: #ff6b3e;
    z-index: 10;
    text-align: center;
}

.time_picker_head wx-view {
    flex: 1;
    justify-content: center;
}

.time_picker_head .green {
    color: green;
}






/*乐墨按钮*/

.lemo-btn-big {
    width: 690rpx;
    height: 80rpx;
    background-color: #4f9dd0;
    font-size: 30rpx;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    font-weight: bold;
    border-radius: 8rpx;
}

button[type="primary"],
.button-hover[type="primary"] {
    color: #FFFFFF;
    background-color: #4f9dd0;
}




/*inphone x*/

.fix-iphoneX-button {
    bottom: 68rpx!important;
}

.fix-iphoneX-button::after {
    content: '';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: #fff;
}

.noshoppro {
    margin:30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.noshoppro wx-image {
    width: 330rpx;
    height: 330rpx;
}

.noshoppro wx-text {
    text-align: center;
    color: #bbb;
    font-size: 34rpx;
    margin-top: 30rpx;
}