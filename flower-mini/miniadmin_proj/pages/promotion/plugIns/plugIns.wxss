/*插件购买*/

.contentbox {
    width: 750rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    padding-bottom: 120rpx;
}

.contentbox-title {
    background-color: #fff;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.contentbox-title-top {
    width: 690rpx;
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.contentbox-title-top-left {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: linear-gradient(rgb(240, 73, 69), rgb(255, 112, 88));
}

.contentbox-title-top-left wx-image {
    width: 44rpx;
    height: 50rpx;
}

.contentbox-title-top-right {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-content: flex-start;
    flex-direction: column;
    margin-left: 20rpx;
}

.contentbox-title-top-right-top {
    font-size: 34rpx;
    color: #333333;
}

.contentbox-title-top-right-bottom {
    font-size: 28rpx;
    color: #999999;
}

.contentbox-title-bottom {
    border-top: 1rpx solid #e5e5e5;
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    font-size: 28rpx;
    color: #333333;
}

.contentbox-title-bottom wx-text {
    color: #ff5f3b;
    margin-left: 20rpx;
}

.scroll {
    width: 730rpx;
    height: 632rpx;
    overflow-x: scroll;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
}

.scroll-colume {
    width: 320rpx;
    height: 570rpx;
    background: red;
    margin: 0 10rpx;
}

.scroll-colume wx-image {
    width: 320rpx;
    height: 570rpx;
}

.explain {
    width: 690rpx;
    padding: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    background-color: #fff;
}

.explain-title {
    font-size: 28rpx;
    color: #333333;
}

.explain-content {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #999999;
}


/*btnbox*/

.btnbox {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 750rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    background-color: #4f9dd0;
}