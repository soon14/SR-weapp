.myCount{
  
}
.myCount .total{
  color:#333;
  text-align: center;
  font-size: 28rpx;
  padding: 90rpx 0 40rpx 0;
}
.myCount .total text{
  font-size: 98rpx;
  padding-right: 8rpx;
  line-height: 1;
}
.myCount .link{
  text-align: center;
  padding-bottom: 50rpx;
  border-bottom: 2rpx solid #E5E5E5;
  margin: 0 30rpx;
}
.myCount .link navigator{
  display: inline-block;
  padding: 0 44rpx;
  font-size: 32rpx;
  color:#3583db;
}
.myCount .title{
  font-size: 30rpx;
  color:#333;
  padding: 28rpx 30rpx;
}
.myCount .title image{
  width: 28rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.priceList{
  overflow: hidden;
  padding: 0 18rpx;
}
.priceList .item{
  width: 214rpx;
  height:124rpx;
  border:2rpx solid #3583DB;
  margin:0 10rpx 20rpx 10rpx;
  float: left;
  text-align: center;
  color:#3583db;
  font-size: 32rpx;
  border-radius: 6rpx;
}
.priceList .item.cur{
  background: #3583db;
  color:#fff;
}
.priceList .item.other{
  line-height: 124rpx;
}
.priceList .item .lemo{
  padding-top: 30rpx;
}
.priceList .item .money{
  font-size: 24rpx;
}
.myCount .btn{
  width: 690rpx;
	height: 90rpx;
	background-image: linear-gradient(0deg, rgba(87, 176, 245, 1) 0%, rgba(41, 155, 245, 1) 100%);
	border-radius: 10rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color:#fff;
  margin: 35rpx auto 60rpx auto;
}
.myCount .rule{
  border-top:2rpx solid #E5E5E5;
  margin: 0 30rpx;
}
.myCount .rule .title{
  padding: 28rpx 0;
}
.myCount .rule .p{ 
  font-size:28rpx;
  color:#999;
  padding-bottom: 20rpx;
}

/*弹窗*/
.giveMask{
  position: fixed;
  left: 0;
  top:0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0,0,0,0.7);
}
.givePop{
  position: fixed;
  width:618rpx;
  height: 930rpx;
  left: 66rpx;
  top:13%;
  z-index: 9;
}
.givePop image{
  position: absolute;
  left: 0;
  top:0;
  width:618rpx;
  height: 930rpx;
  z-index: 10;
}
.givePop .txt{
  position: relative;
  z-index: 11;
  text-align: center;
} 
.givePop .txt .p1{
  margin-top:400rpx;
  font-size: 48rpx;
  color:#fff;
}
.givePop .txt .gift{
  font-size: 80rpx;
  color:#fdf414;
  font-weight: 500;
  line-height: 1;
  padding: 50rpx 0;
}
.givePop .txt navigator{
  background: #fdf414;
  width: 300rpx;
	height: 88rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
	border-radius: 40rpx;
  font-size: 34rpx;
  color:#ea2a50;
  font-weight: 500;
}
.givePop .tips{
  padding: 60rpx 116rpx 0 116rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  color:rgba(255,255,255,0.8);
}