page{
  background:#edeef0;
}
.editData-top {
  background: #fff;
  position:relative;
  margin-bottom: 20rpx;
}
.editData-top .bgImg{
  width: 100%;
  height: 270rpx;
  vertical-align: top;
}
.editData-top .msg{
  position: absolute;
}
.referrer{
  margin-top: 200rpx;
  border-top:2rpx solid #EDEDED;
  display: flex;
  padding:30rpx;
  align-items: center;
}
.referrer .icon{
  width: 31rpx;
  height: 38rpx;
}
.referrer .txt{
  flex: 1;
  padding-left: 26rpx;
}
.referrer .txt .name{
  font-size: 32rpx;
  color:#333;
}
.referrer .txt .idNum{
  font-size: 28rpx;
  color:#999;
  padding-top:8rpx;
}
.referrer .phone{
  width: 50rpx;
  height:50rpx;
}
.editData-top .msg{
  width: 690rpx;
  height: 320rpx;
  position: absolute;
  left: 30rpx;
  top:106rpx;
  background: #fff;
  box-shadow: 0px 5px 20px 0px rgba(0, 0, 0, 0.15);
  border-radius: 10rpx;
  z-index: 2;
  text-align: center;
}
.editData-top .msg .avater{
  position: absolute;
  top: -76rpx;
  left: 50%;
  margin-left:-75rpx;
}
.editData-top .msg .avater image{
  width: 132rpx;
  height:132rpx;
  border:6rpx solid #fff;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  box-shadow: 0px 2px 10px 0px 	rgba(0, 0, 0, 0.15);
}
.editData-top .msg .name{
  color:#010101;
  font-size:42rpx;
  padding-top: 100rpx;
  line-height: 1;
}
.editData-top .msg .status{
  width: 160rpx;
	height: 56rpx;
  line-height: 56rpx;
	border-radius: 28rpx;
	border: solid 2rpx #3583db;
  margin: 24rpx auto;
  font-size: 28rpx;
  color:#3583db;
}
.editData-top .msg .tips{
  font-size: 28rpx;
  color:#999;
}
/*已认证*/
.editData-top .verified .status{
  width: 106rpx;
	height: 36rpx;
	border-radius: 4rpx;
	border: solid 2rpx rgba(239, 83, 98, 1);
  font-size: 22rpx;
  color:#ef5362;
  display: flex;
  align-items: center;
  justify-content:center;
  margin: 34rpx auto 30rpx auto;
}
.editData-top .verified .status image{
  width: 26rpx;
  height: 22rpx;
  margin-right: 2rpx;
}
.editData-top .verified .tips{
  font-weight: 500;
}

.editData-item{
  margin-bottom: 20rpx;
  background: #fff;
}
.editData-item .item{
  display: flex;
  align-items: center;
  height: 90rpx;
  border-bottom: 2rpx solid #E5E5E5;
  padding: 0 30rpx;
}
.editData-item .item .icon1{
  width: 34rpx;
  height: 38rpx;
  margin: 0 2rpx;
}
.editData-item .item .icon2{
  width: 29rpx;
  height: 38rpx;
  margin: 0 4rpx;
}
.editData-item .item .icon3{
  width: 30rpx;
  height: 38rpx;
  margin: 0 4rpx;
}
.editData-item .item .icon4{
  width: 38rpx;
  height: 36rpx;
}
.editData-item .item .icon5{
  width: 32rpx;
  height: 30rpx;
  margin: 0 2rpx;
}
.editData-item .item .icon6{
  width: 38rpx;
  height: 38rpx;
}
.editData-item .item .rArrow{
  width: 14rpx;
  height: 24rpx;
}
.editData-item .item text{
  flex: 1;
  font-size: 32rpx;
  color:#333;
  margin-left: 22rpx;
}