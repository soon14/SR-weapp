page{
  background: #edeef0;
}
.sendRedPocket .hd{
  padding: 0 30rpx;
  background: #fff;
}
.sendRedPocket .hd .row{
  padding: 20rpx 0;
  height:60rpx;
  line-height: 60rpx;
  display: flex;
  color:#333;
  border-bottom: 2rpx solid #E5E5E5;
}
.sendRedPocket .hd .row:last-child{
  border-bottom: 0;
}
.sendRedPocket .hd .row .lable{
  width: 200rpx;
  font-size: 32rpx;
}
.sendRedPocket .hd .row .cnt{
  flex: 1;
  text-align: right;
}
.sendRedPocket .hd .row .cnt input{
  height: 60rpx;
  font-size: 30rpx;
}
.sendRedPocket .hd .row .unit{
  padding-left: 10rpx;
  font-size: 30rpx;
}
.sendRedPocket .msg{
  margin-top: 20rpx;
  background: #fff;
}
.sendRedPocket .msg textarea{
  padding: 24rpx 30rpx;
  color:#333;
  line-height: 40rpx;
  font-size: 32rpx;
  height: 160rpx;
}
.sendRedPocket .total{
  font-size: 100rpx;
  color:#333;
  padding: 50rpx 0;
  text-align: center;
  line-height: 1;
  font-weight: 500;
}
.sendRedPocket button{
  width: 570rpx;
	height: 90rpx;
	background-image: linear-gradient(0deg, rgba(232, 86, 86, 1) 0%, rgba(231, 72, 72, 1) 100%);
	border-radius: 10rpx;
  font-size: 32rpx;
  color:#fff;
}
.fix-ft{
  position: fixed;
  width: 100%;
  bottom: 56rpx;
  text-align: center;
}
.fix-ft navigator{
  font-size: 30rpx;
  color:#364f82;
}