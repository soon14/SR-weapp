/*乐墨币消费纪录 */
.lemobiRecord{
  padding: 0 30rpx;
}
.lemobiRecord .item{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 26rpx 0;
  border-bottom: 2rpx solid #E5E5E5;
}
.lemobiRecord .item .item-left {
  flex: 3;
}
.lemobiRecord .item .item-left .type{
  font-size: 32rpx;
  color:#333;
  font-weight: 500;
}
.lemobiRecord .item .item-left .time{
  font-size: 26rpx;
  color:#999;
  padding-top: 8rpx;
}
.lemobiRecord .item .num{
  flex: 1;
  font-size: 32rpx; 
  color:#333;
  text-align: right;
  font-weight: 500;
}
.lemobiRecord .item .num.add{
  color:#3583db;
}
